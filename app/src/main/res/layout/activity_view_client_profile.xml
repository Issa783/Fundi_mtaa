<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Worker's Profile Information -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewProfileInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Fieldset: Personal Information -->
            <TextView
                android:id="@+id/textViewPersonalInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personal Information"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <!-- Name -->
            <TextView
                android:id="@+id/textViewClientName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:layout_below="@id/textViewPersonalInfo"
                android:layout_marginTop="8dp"/>
            <!-- Name -->
            <TextView
                android:id="@+id/textViewClientEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email: "
                android:layout_below="@id/textViewClientName"
                android:layout_marginTop="8dp"/>


            <!-- Phone Number -->
            <TextView
                android:id="@+id/textViewClientPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number: "
                android:layout_below="@id/textViewClientEmail"
                android:layout_marginTop="8dp"/>

            <!-- Location -->
            <TextView
                android:id="@+id/textViewClientLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location: "
                android:layout_below="@id/textViewClientPhoneNumber"
                android:layout_marginTop="8dp"/>



        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>