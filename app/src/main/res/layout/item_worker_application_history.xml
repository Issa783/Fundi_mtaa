<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewJobName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Name"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewJobDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Date"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/buttonViewJobDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Job Details"
            android:layout_marginTop="16dp"
            android:background="@color/my_primary"/>
        <Button
            android:id="@+id/buttonViewClientDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Client Details"
            android:layout_marginTop="16dp"
            android:background="@color/my_primary"/>

        <Button
            android:id="@+id/buttonMarkAsDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mark as Done"
            android:layout_marginTop="8dp"
            android:background="@color/colorAccent"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
